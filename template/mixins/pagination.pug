mixin pagination
    ul(class="pagination")
        li 
            a(
                href="#"
                class="pagination__item pagination__item-icon"
            )
                <i class="fa-solid fa-angle-left"></i>
        li 
            a(
                href="#"
                class="pagination__item pagination__item--active"
            ) 1
                
        li 
            a(
                href="#"
                class="pagination__item"
            ) 2
                
        li 
            a(
                href="#"
                class="pagination__item"
            ) 3
                
        li 
            a(
                href="#"
                class="pagination__item pagination__item-icon"
            )
                <i class="fa-solid fa-angle-right"></i>